<p style="color: green"><%= notice %></p>

<%= render @report %>

<h1>この日報は以下の日報からリンクされています</h1>

<div id="mentions">
  <% @report.mentioned_reports.each do |report| %>
    <%= render 'mentioned_report', report: report %>
  <% end %>
</div>

<div>
  <%= link_to "Edit this report", edit_report_path(@report) %> |
  <%= link_to "Back to reports", reports_path %>

  <%= button_to "Destroy this report", @report, method: :delete %>
</div>
